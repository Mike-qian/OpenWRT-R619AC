# 5. IPQ4019 硬件加密引擎专属配置 (仅保留支持项)
CONFIG_CRYPTO=y
CONFIG_CRYPTO_ALGAPI=y
CONFIG_CRYPTO_MANAGER=y
CONFIG_CRYPTO_MANAGER_DISABLE_TESTS=y  # 禁用测试，减少体积
CONFIG_CRYPTO_HW=y
CONFIG_CRYPTO_DEV=y

# AES 算法：IPQ4019 硬件支持 ECB/CBC/CTS/GCM/CCM
CONFIG_CRYPTO_AES=y
CONFIG_CRYPTO_AES_ARM=y  # ARM 软解兜底
CONFIG_CRYPTO_AES_CBC=y
CONFIG_CRYPTO_AES_GCM=y  # 硬件加速主流模式
# 剔除不支持的 AES-CTR 硬件加速
CONFIG_CRYPTO_CTR=y      # 纯软件实现
CONFIG_CRYPTO_GCM=y

# QCA 加密驱动：仅保留 IPQ4019 支持的功能
CONFIG_CRYPTO_DEV_QCA=y
CONFIG_CRYPTO_DEV_QCA_COMMON=y
CONFIG_CRYPTO_DEV_QCA_CRYPTO=y
CONFIG_CRYPTO_DEV_QCA_AES=y
CONFIG_CRYPTO_DEV_QCA_AES_GCM=y  # 硬件加速 GCM
CONFIG_CRYPTO_DEV_QCA_SHA=y      # SHA1/SHA256 硬件加速
CONFIG_CRYPTO_DEV_QCA_SHA256=y
# 剔除不支持的 SHA512/CTR/ECC 硬件加速

# 用户态加密接口 (匹配硬件支持项)
CONFIG_CRYPTO_USER_API=y
CONFIG_CRYPTO_USER_API_ALG=y
CONFIG_CRYPTO_USER_API_AEAD=y    # 支持 AES-GCM
CONFIG_CRYPTO_USER_API_HASH=y    # 支持 SHA256
CONFIG_CRYPTO_USER_API_SKCIPHER=y # 支持对称加密
CONFIG_CRYPTO_SHA256=y
# 剔除 SHA512 硬件加速配置，保留软件按需启用
# CONFIG_CRYPTO_SHA512=y

# 6. OpenSSL 适配配置 (绑定 IPQ4019 硬件加密)
CONFIG_PACKAGE_libopenssl=y
#CONFIG_PACKAGE_libopenssl-dev=y
CONFIG_OPENSSL_WITH_ASM=y        # ARM 汇编优化
CONFIG_OPENSSL_WITH_HW_CRYPTO=y  # 硬件加密适配
CONFIG_OPENSSL_WITH_AES=y
CONFIG_OPENSSL_WITH_GCM=y
CONFIG_OPENSSL_WITH_SHA256=y
CONFIG_OPENSSL_WITH_EC=y         # ECC 纯软件实现
CONFIG_OPENSSL_ENGINES=y
CONFIG_OPENSSL_ENGINE_CRYPTODEV=y # 绑定内核加密设备

# 7. 网络安全与协议配置 (IPQ4019 兼容)
CONFIG_PACKAGE_openvpn-openssl=y  # 自动调用硬件 AES
CONFIG_PACKAGE_strongswan=y
CONFIG_STRONGSWAN_WITH_AES=y
CONFIG_STRONGSWAN_WITH_GCM=y
# WPA3 依赖 AES-GCM 硬件加速
CONFIG_PACKAGE_hostapd-common=y
CONFIG_HOSTAPD_WPA3=y
CONFIG_HOSTAPD_CRYPTO=y

# 8. IPQ4019 专属内核优化配置 (剔除不支持项)
# 内存优化：SLUB 分配器适配四核
CONFIG_KERNEL_SLUB=y
CONFIG_KERNEL_SLUB_DEBUG=n
CONFIG_KERNEL_CLEANCACHE=y

# 网络缓冲区优化 (适配高并发代理)
CONFIG_KERNEL_SKB_RECYCLER_PREALLOC=y
CONFIG_KERNEL_ALLOC_SKB_PAGE_FRAG_DISABLE=y
CONFIG_KERNEL_SKB_MAX_ALLOC_SIZE=16384  # 适配大包转发
# 剔除不支持的 NET_RX_BUSY_POLL
CONFIG_KERNEL_NET_RX_QUEUE_POLL=y       # 减少软中断竞争
CONFIG_KERNEL_IRQ_FORCED_THREADING=y    # 中断线程化

# 网卡优化：仅保留 IPQ4019 支持项
CONFIG_KERNEL_NETDEV_RX_GRO=y  # 接收端合并
CONFIG_KERNEL_NETDEV_UDP_CHECKSUM_OFFLOAD=y # UDP 硬件校验和
# 剔除 TSO/GSO/TCP 校验和硬件卸载
# CONFIG_KERNEL_NETDEV_TX_TSO=y
# CONFIG_KERNEL_NETDEV_TX_GSO=y
# CONFIG_KERNEL_NETDEV_CHECKSUM_OFFLOAD=y

# 多核网络调度：IPQ4019 四核受益
CONFIG_KERNEL_IRQ_AFFINITY=y
CONFIG_KERNEL_NET_CPUMASK=y
CONFIG_KERNEL_RPS=y  # 接收端处理器扩展
CONFIG_KERNEL_RFS=y  # 接收端流转向
# 剔除不支持的硬件 NAT/Conntrack 加速
# CONFIG_KERNEL_NF_CONNTRACK_HW=y
# CONFIG_KERNEL_NF_NAT_HW=y
